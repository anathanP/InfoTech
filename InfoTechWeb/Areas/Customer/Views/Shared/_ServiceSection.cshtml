@model ServiceSectionViewModel
@{
    var serviceCount = 0;
}

<section class="service-section-3 pb-2 fix section-padding bg-cover" style="background-image: url('/img/service/service-bg-3.jpg');">
    <div class="container">
        <div class="section-title-area">
            <div class="section-title">
                <span>
                    @Model.Section!.Tag
                </span>
                <h2>
                    @Html.Raw(Model.Section.Title)
                </h2>
            </div>
            <a class="theme-btn" href="@Model.Section.FillButtonAction">
                @Model.Section.FillButtonCaption
                <i class="fa-solid fa-arrow-left-long">
                </i>
            </a>
        </div>
        <div class="row">
            @foreach (var service in Model.Services!.OrderByDescending(s => s.Id))
            {
                serviceCount++;
                if (serviceCount == 5)
                {
                    break;

                }
                <div class="col-xl-3 col-lg-4 col-md-6">
                    <div class="service-card-items">
                        <div class="service-image">
                            <img alt="@service.Image!.Alt" title="@service.Image.Title" src="/img/@service.Image.Address" />
                        </div>
                        <div class="icon-2">
                            <img alt="img" src="/img/service/icon/s-icon-1.svg" />
                        </div>
                        <div class="service-content">
                            <div class="icon">
                                <img alt="img" src="/img/service/icon/s-icon-1.svg" />
                            </div>
                            <h4>
                                <a href="service-details.html">
                                    @service.Name
                                </a>
                            </h4>
                            <p>
                                @service.Description
                            </p>
                            <a class="theme-btn-2 mt-3" href="service-details.html">
                                ادامه مطلب
                                <i class="fa-solid fa-arrow-left-long">
                                </i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>